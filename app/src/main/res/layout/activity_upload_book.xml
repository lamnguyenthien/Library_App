<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadBookActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm sách mới"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/lavender"/>

        <EditText
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:id="@+id/nbook_name"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:hint="Tên sách" />

        <EditText
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:id="@+id/nbook_author"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:hint="Tác giả" />

        <EditText
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:id="@+id/nbook_pubish_comp"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:hint="Nhà xuất bản" />

        <EditText
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:id="@+id/nbook_publish_year"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:hint="Năm xuất bản" />


        <EditText
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:id="@+id/nbook_type"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:hint="Loại sách" />
        <EditText
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:id="@+id/nbook_category"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:hint="Thể loại" />
        <EditText
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:id="@+id/nbook_faculty"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:hint="Khoa" />

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_marginTop="30dp">
            <EditText
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:id="@+id/nbook_price"
                android:background="@drawable/lavender_border"
                android:padding="8dp"
                android:hint="Giá" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="VND"
                android:textColor="@color/lavender"
                android:textAlignment="center"
                android:textSize="18dp"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <EditText
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/nbook_quality_stock"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="Số lượng còn:"
                android:layout_marginRight="5dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/nbook_quality_borrow"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="Số lượng mượn:"
                android:layout_marginLeft="5dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_upload_book"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Thêm sách"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Hủy bỏ"
                android:layout_marginTop="8dp"
                android:textColor="#FF0000"
                android:layout_marginLeft="5dp"/>
        </TableRow>
    </LinearLayout>
</ScrollView>