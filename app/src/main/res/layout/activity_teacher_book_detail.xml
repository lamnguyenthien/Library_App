<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TeacherBookDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quay về"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/btn_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết sách"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textStyle="bold"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tên sách: "
                android:textColor="@color/lavender"
                android:textAlignment="center"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_book_name"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:background="@drawable/lavender_border"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingLeft="8dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tác giả: "
                android:textColor="@color/lavender"
                android:textAlignment="center"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_book_author"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:background="@drawable/lavender_border"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingLeft="8dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Nhà xuất bản: "
                android:textColor="@color/lavender"
                android:textAlignment="center"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_publish_comp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2.5"
                android:background="@drawable/lavender_border"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingLeft="8dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Năm xuất bản: "
                android:textColor="@color/lavender"
                android:textAlignment="center"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_book_year"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2.5"
                android:background="@drawable/lavender_border"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingLeft="8dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thể loại: "
                android:textColor="@color/lavender"
                android:textAlignment="center"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_book_category"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:background="@drawable/lavender_border"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingLeft="8dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Loại: "
                android:textColor="@color/lavender"
                android:textAlignment="center"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_book_type"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:background="@drawable/lavender_border"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingLeft="8dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Khoa: "
                android:textColor="@color/lavender"
                android:textAlignment="center"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_book_faculty"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:background="@drawable/lavender_border"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingLeft="8dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Giá: "
                android:textColor="@color/lavender"
                android:textAlignment="center"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_book_price"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/lavender_border"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingLeft="8dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="VND"
                android:textColor="@color/lavender"
                android:textAlignment="center"
                android:textSize="18dp"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Còn: "
                android:textColor="@color/lavender"
                android:textAlignment="center"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_book_quality_stock"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/lavender_border"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingLeft="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mượn: "
                android:textColor="@color/lavender"
                android:textAlignment="center"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/edit_book_quality_borrow"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/lavender_border"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingLeft="8dp"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_update_book"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Cập nhật"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/btn_delete_book"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Xóa"
                android:layout_marginTop="8dp"
                android:textColor="#FF0000"
                android:layout_marginLeft="5dp"/>
        </TableRow>
    </LinearLayout>




</ScrollView>